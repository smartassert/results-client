{
    "name": "smartassert/results-client",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/smartassert/results-client",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer check --allow-risky=yes --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --allow-risky=yes --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "cs": [
            "@cs-fixer-dry-run",
            "@cs-phpcs"
        ],
        "static-analysis": "./vendor/bin/phpstan",
        "test": "./vendor/bin/phpunit --colors=always tests",
        "users-db-setup": [
            "docker compose -f ./tests/build/docker-compose.yml exec -T users-service php bin/console doctrine:database:create --if-not-exists",
            "docker compose -f ./tests/build/docker-compose.yml exec -T users-service php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration"
        ],
        "users-generate-jwt-keys": "docker compose -f ./tests/build/docker-compose.yml exec -T users-service php bin/console lexik:jwt:generate-keypair --overwrite --no-interaction",
        "users-create-user1": "curl --header 'Authorization: primary_admin_token' --data 'identifier=user1@example.com&password=password' http://localhost:9080/create",
        "users-create-user2": "curl --header 'Authorization: primary_admin_token' --data 'identifier=user2@example.com&password=password' http://localhost:9080/create",
        "users-setup": [
            "@users-db-setup",
            "@users-generate-jwt-keys",
            "@users-create-user1",
            "@users-create-user2",
            ""
        ],
        "results-setup": [
            "docker compose -f ./tests/build/docker-compose.yml exec -T results-service php bin/console doctrine:database:create --if-not-exists",
            "docker compose -f ./tests/build/docker-compose.yml exec -T results-service php bin/console doctrine:migrations:migrate --no-interaction --allow-no-migration"
        ],
        "integration-up": "docker compose -f tests/build/docker-compose.yml  up -d",
        "integration-status": "docker compose -f tests/build/docker-compose.yml ps",
        "integration-logs": "docker compose -f tests/build/docker-compose.yml logs",
        "integration-setup": [
            "@integration-up",
            "sleep 2",
            "@users-setup",
            "@results-setup"
        ],
        "integration-teardown": [
            "docker compose -f ./tests/build/docker-compose.yml down"
        ]
    },
    "autoload": {
        "psr-4": {
            "SmartAssert\\ResultsClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartAssert\\ResultsClient\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^8.4",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "smartassert/array-inspector": ">=0.2,<1",
        "smartassert/service-client": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "dev-master#32c1c3f8fb65051f27a2d295e9c467b7ebe9de11",
        "guzzlehttp/guzzle": "^7.5",
        "mockery/mockery": "^1.5",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^11",
        "smartassert/test-authenticaton-provider-bundle": "^5.0",
        "squizlabs/php_codesniffer": "^4.0",
        "symfony/uid": "^7.3",
        "webignition/http-history-container": "^4.0"
    },
    "minimum-stability":"stable",
    "prefer-stable":true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
